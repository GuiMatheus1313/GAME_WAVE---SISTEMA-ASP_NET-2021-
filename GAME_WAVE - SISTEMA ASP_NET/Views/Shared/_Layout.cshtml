<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GAME WAVE - SUA LOJA GEEKER FAVORITA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    
    <style>
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #919191;
            overflow-x: hidden;
            transition: 0.2s;
            padding-top: 60px;
        }

            .sidebar button {
                padding: 6px 6px 6px 18px;
                text-decoration: none;
                font-size: 23px;
                background-color: white;
                display: block;
                width: 100%;
                height: 100px;
            }

                .sidebar button:hover {
                    color: #545454;
                }

            .sidebar .fechabtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 40px;
                margin-left: 100px;
            }

        .abrebtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #545454;
            color: white;
            padding: 10px;
            border: none;
        }

        #cadastrobarra {
            position: relative;
            float: right;
            margin-top: -110px;
            width: 50px;
            background-color: #222222;
        }

            #cadastrobarra button {
                width: 150px;
                height: 40px;
                text-decoration: none;
                color: #ffffff;
                background-color: #262626;
                border: none;
                

            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                <!--
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        -->
                <button id="lateral" class="abrebtn" onClick="openNav()">☰</button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>


            <div id="barralateral" class="sidebar">
                <a href="javascript:void(0)" class="fechabtn" onclick="closeNav()">X</a>
                Utilize os botões abaixo para realizar as funções necessárias!
                <div class="dropdown dropdown-menu-right">
                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 300px; text-align: left;">
                        Cadastrar
                    </button>
                    <div id="cadastrobarra" class="dropdown-menu" style="margin-right: 10px;">
                        <button class="dropdown-item">@Html.ActionLink("Cliente", "CadProduto", "Home")</button><br />
                        <button class="dropdown-item">Produto</button><br>
                        <button class="dropdown-item">Funcionário</button>
                    </div>
                </div>
                <br />
                <div class="dropdown dropdown-menu-right">
                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 300px; text-align: left;">
                        Alterar
                    </button>
                    <div id="cadastrobarra" class="dropdown-menu" style="margin-right: 10px;">
                        <button class="dropdown-item">@Html.ActionLink("Cliente", "AltProduto", "Home")</button><br />
                        <button class="dropdown-item ">Produto</button><br>
                        <button class="dropdown-item">Func</button>
                    </div>
                </div>
                <br />
                <div class="dropdown dropdown-menu-right">
                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 300px; text-align: left;
">
                        Consultar<br >------------<br />Deletar
                    </button>
                    <div id="cadastrobarra" class="dropdown-menu" style="margin-right: 10px;">
                        <button class="dropdown-item">@Html.ActionLink("Cliente", "Del_Con_Produto", "Home")</button><br />
                        <button class="dropdown-item ">Produto</button><br>
                        <button class="dropdown-item">Func</button>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; GAME WAVE @DateTime.Now.Year - TODOS OS DIREITOS RESERVADOS </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function openNav() {
                document.getElementById("barralateral").style.width = "350px";

          

            
        }

        function closeNav() {
            document.getElementById("barralateral").style.width = "0px";

        }


                    

    </script>
</body>
</html>
