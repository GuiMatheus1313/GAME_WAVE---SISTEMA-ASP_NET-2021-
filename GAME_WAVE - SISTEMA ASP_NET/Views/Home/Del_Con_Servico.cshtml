@model IEnumerable<GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Servico>
<!DOCTYPE HTML>
<html lang="pt-br">
@{
    ViewBag.Title = "Consulta dos Serviços";
}
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/background_imagens.css" />


</head>
<body>
    <center><h2>Lista dos serviços presentes</h2></center>

    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cod_Serv)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Desc_Serv)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_Serv)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DateEntre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DateSaida)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Valor_servico)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Fk_Funcionario_Func_Cod)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Serv)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Desc_Serv)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_Serv)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateEntre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateSaida)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Valor_servico)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Fk_Funcionario_Func_Cod)
                </td>

                <td>
                    @Html.ActionLink("Alterar", "AltServico", null, new { serv = item.Cod_Serv }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Excluir", "DelServico", null, new { serv = item.Cod_Serv }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</body>
</html>

