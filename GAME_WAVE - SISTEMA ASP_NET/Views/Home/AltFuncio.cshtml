<!DOCTYPE HTML>
<html lang="pt-br">
@model GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Funcionario
@{
    ViewBag.Title = "Alteração do Funcionário";
}
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/" />
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="~/Content/StyleForm.css" />

</head>
<body>
    <div class="container">
        <h1> <b>Alterar Funcionario</b></h1>
        @using (Html.BeginForm("AltFuncio", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <form class="form">
                <div class="row">
                    <fieldset class="form-group">
                        <label class="form-label" id="label">@Html.LabelFor(m => m.Func_cod)</label>
                        <div class="editor-field" id="desabilitar">
                            @Html.EditorFor(m => m.Func_cod, new { htmlAttributes = new { @class = "form-control", @enabled = "false" } })
                            @Html.ValidationMessageFor(m => m.Func_cod, "", new { @class = "" })
                        </div>
                    </fieldset>               

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-label" id="label">@Html.LabelFor(m => m.Func_nome)</label>
                            @Html.TextBoxFor(m => m.Func_nome, new { @class = "form-control", })
                            @Html.ValidationMessageFor(m => m.Func_nome)
                        </fieldset>
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl">@Html.LabelFor(m => m.Func_cargo)</label>
                            @Html.TextBoxFor(m => m.Func_cargo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Func_cargo)
                        </fieldset>
                    </div>
                </div>

        <div class="row">
            <div class="col-md-3">
                <fieldset class="form-group">
                    <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_tel)</label>
                    @Html.TextBoxFor(m => m.Func_tel, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Func_tel)
                </fieldset>
            </div>

            <div class="col-md-3">
                <fieldset class="form-group">
                    <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_email)</label>
                    @Html.TextBoxFor(m => m.Func_email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Func_email)
                </fieldset>
            </div>

            <div class="col-md-1">
                <fieldset class="form-group">
                    <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_datanasc)</label>
                    @Html.TextBoxFor(m => m.Func_datanasc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Func_datanasc)
                </fieldset>
            </div>
        </div>

        <div>
            <br /> <input type="submit" value="Alterar" name="btnenviar" />
        </div>
        </form>
        @section Scripts{
            @Scripts.Render("~/bundles/jqueryval");
        }

    }
        </div>
    </body>
</html>
