<!DOCTYPE HTML>
<html lang="pt-br">
@model GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Funcionario
@{
    ViewBag.Title = "Alteração do Funcionário";
}
<head>
    <meta charset="utf-8" />
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="~/Content/StyleForm.css" />
    <script src="~/Scripts/Mask.js" type="text/javascript"></script>
    <style>
        .form-control {
            padding: 5px;
            height: 30px;
            font-size: 1.4rem;
        }

        #cod {
            margin-left: 2%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 align="center"> <b>Alterar Funcionario</b></h1>
        @using (Html.BeginForm("AltFuncio", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <form class="form" >
                <div class="row">
                    <div class="col-md-2">
                        <fieldset class="form-group" id="cod">
                            <label class="form-label" id="label">@Html.LabelFor(m => m.Func_cod)</label>
                            @Html.EditorFor(m => m.Func_cod, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </fieldset>
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group" id="cod">
                            <label class="form-label" id="label">@Html.LabelFor(m => m.Func_nome)</label>
                            @Html.TextBoxFor(m => m.Func_nome, new { @class = "form-control", })
                            @Html.ValidationMessageFor(m => m.Func_nome)
                        </fieldset>
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_cargo)</label>
                            @Html.TextBoxFor(m => m.Func_cargo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Func_cargo)
                        </fieldset>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_tel)</label>
                            @Html.TextBoxFor(m => m.Func_tel, new { @class = "form-control", onkeypress = "MaskTel(this)" })
                            @Html.ValidationMessageFor(m => m.Func_tel)
                        </fieldset>
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_email)</label>
                            @Html.TextBoxFor(m => m.Func_email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Func_email)
                        </fieldset>
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Func_datanasc)</label>
                            @Html.TextBoxFor(m => m.Func_datanasc, new { @class = "form-control", onkeypress = "MaskDate(this)" })
                            @Html.ValidationMessageFor(m => m.Func_datanasc)
                        </fieldset>
                    </div>
                </div>

                <div>
                    <br /> <input class="btn btn-primary" id="button" type="submit" value="Alterar" name="btnenviar" />
                </div>
            </form>
            @section Scripts{
                @Scripts.Render("~/bundles/jqueryval");
            }

        }
    </div>
</body>
</html>
