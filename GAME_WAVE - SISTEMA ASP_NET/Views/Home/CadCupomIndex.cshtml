<!DOCTYPE HTML>
<html lang="pt-br">
@model GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Cupom
@{
    ViewBag.Title = "Cadastro do Cupom";
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/background_imagens.css" />


</head>
<body>
    <br />
    <br />
    <legend> Cadastro de Cupom</legend>

    <div class="container" id="">

        @using (Html.BeginForm("CadCupom", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)

            <fieldset>


                <div class="editor-label" style="font-size: 30px;">
                    @Html.LabelFor(m => m.Cupom_cod)
                </div>

                <div class="editor-field">
                    @Html.EditorFor(m => m.Cupom_cod)
                    @Html.ValidationMessageFor(m => m.Cupom_cod)
                </div>

                <div class="editor-label" style="font-size: 30px; margin-left: 500px; margin-top: -73px;">
                    @Html.LabelFor(m => m.DescontoCupom)
                </div>

                <div class="editor-field" style="margin-left: 500px;">
                    @Html.EditorFor(m => m.DescontoCupom)
                    @Html.ValidationMessageFor(m => m.DescontoCupom)
                </div>

                <div>
                    <br /> <input type="submit" value="Cadastrar" name="btnenviar" />
                </div>
            </fieldset>
            @section Scripts{
                @Scripts.Render("~/bundles/jqueryval");
            }
        }
</body>
</html>

