<!DOCTYPE HTML>
<html lang="pt-br">
@model GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Cliente
@{
    ViewBag.Title = "Alteração do Cliente";
}
<head>
    <meta charset="utf-8" />
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="~/Content/StyleForm.css" />
    <script src="~/Scripts/Mask.js" type="text/javascript"></script>
    <style>
        .form-control {
            padding: 5px;
            height: 30px;
            font-size: 1.4rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 align="center"> <b>Alteração do Cliente</b></h1 align="center">

        @using (Html.BeginForm("AltCliente", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

         <form class="form">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label" id="label">@Html.LabelFor(m => m.Cli_cpf)</label>
                            @Html.TextBoxFor(m => m.Cli_cpf, new { @class = "form-control", onkeyup = "MaskCpf(this)" })
                            @Html.ValidationMessageFor(m => m.Cli_cpf)
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Cli_nome)</label>
                            @Html.TextBoxFor(m => m.Cli_nome, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Cli_nome)
                        </fieldset>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Cli_email)</label>
                            @Html.TextBoxFor(m => m.Cli_email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Cli_email)
                        </fieldset>
                    </div>

                    <div class="col-md-3">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Cli_tel)</label>
                            @Html.TextBoxFor(m => m.Cli_tel, new { @class = "form-control", onkeypress = "MaskTel(this)" })
                            @Html.ValidationMessageFor(m => m.Cli_tel)
                        </fieldset>
                    </div>

                    <div class="col-md-1">
                        <fieldset class="form-group">
                            <label class="form-lbl" id="label">@Html.LabelFor(m => m.Cli_numEnd)</label>
                            @Html.TextBoxFor(m => m.Cli_numEnd, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Cli_numEnd)
                        </fieldset>
                    </div>
                </div>

            <div>
                <br /> <input class="btn btn-primary" id="button" type="submit" value="Alterar" name="btnenviar" />
            </div>
        </form>
                @section Scripts{
                    @Scripts.Render("~/bundles/jqueryval");
                }
            }

    </div>
</body>
</html>
