@model IEnumerable<GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Produto>
<!DOCTYPE HTML>
<html lang="pt-br">
@{
    ViewBag.Title = "Consulta dos produtos";
}
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/background_imagens.css" />


</head>
<body>
    <br />
    <br />
    <center><h2>Lista dos produtos registrados</h2></center>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cod_prod)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_tipo)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_quant_estoque)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_desc)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_anolanc)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_faixaeta)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Prod_valor)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_prod)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_tipo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_quant_estoque)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_desc)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_anolanc)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_faixaeta)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Prod_valor)
                </td>

                <td>
                    @Html.ActionLink("Alterar", "AltProduto", null, new { produ = item.Cod_prod }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Excluir", "DelProduto", null, new { produ = item.Cod_prod }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>

</body>
</html>

