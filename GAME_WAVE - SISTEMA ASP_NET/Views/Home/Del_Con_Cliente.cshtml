@model IEnumerable<GAME_WAVE___SISTEMA_ASP_NET.Models.Classe_Cliente>
<!DOCTYPE HTML>
<html lang="pt-br">
@{
    ViewBag.Title = "Del_Con_Cliente";
}
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/background_imagens.css" />


</head>
<body>
<h2>Del_Con_Produto</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cli_cpf)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cli_nome)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cli_numEnd)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cli_email)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cli_tel)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cli_cpf)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Cli_nome)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Cli_numEnd)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Cli_email)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Cli_tel)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                
                <td>
                    @Html.ActionLink("Alterar", "AltCliente", null, new { cpf = item.Cli_cpf }, new { @class = "btn btn-primary-xs"})
                    @Html.ActionLink("Excluir", "DelCliente", null, new { cpf = item.Cli_cpf }, new { @class = "btn btn-danger-xs"})
                </td>
        </tr>
        }
    </table>
</body>
</html>

